<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:EcoMeChan_Mobile.Resources.Languages"
             x:Class="EcoMeChan_Mobile.Views.LanguageSelectionPage"
             Title="{x:Static resources:AppResources.LanguageSelectionTitle}">

    <StackLayout VerticalOptions="Center" Spacing="20">
        <Button Text="English" Clicked="ChangeLanguageToEnglish" />
        <Button Text="Українська" Clicked="ChangeLanguageToUkrainian" />
    </StackLayout>

</ContentPage>