<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoMeChan_Mobile.Views.RegistrationPage"
             Title="Registration">
    <VerticalStackLayout Spacing="20" Padding="20">
        <Entry x:Name="LoginEntry" Text="{Binding Login}" />
        <Entry x:Name="PasswordEntry" IsPassword="True" Text="{Binding Password}" />
        <Entry x:Name="PhoneEntry" Text="{Binding Phone}" />
        <Entry x:Name="EmailEntry" Text="{Binding Email}" />
        <Entry x:Name="LastNameEntry" Text="{Binding LastName}" />
        <Entry x:Name="FirstNameEntry" Text="{Binding FirstName}" />
        <Entry x:Name="MiddleNameEntry" Text="{Binding MiddleName}" />
        <Button x:Name="RegisterButton" Command="{Binding RegisterCommand}" />
    </VerticalStackLayout>
</ContentPage>